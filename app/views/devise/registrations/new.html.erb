<body class="signup-page">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-simple-form" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "username", class: "form-input" },
      wrapper_html: { class: "form-input-wrapper" } %>

    <%= f.input :email,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "email", class: "form-input" },
      wrapper_html: { class: "form-input-wrapper" } %>

    <%= f.input :photo, as: :file, input_html: { class: "form-input" }, wrapper_html: { class: "form-input-wrapper" } %>

    <%= f.input :password,
      required: true,
      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
      input_html: { autocomplete: "new-password", class: "form-input" },
      wrapper_html: { class: "form-input-wrapper" } %>

    <%= f.input :confirm_password,
      required: true,
      input_html: { autocomplete: "new-password", class: "form-input" },
      wrapper_html: { class: "form-input-wrapper" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create Account", class: "create-account-button" %>
  </div>
<% end %>

